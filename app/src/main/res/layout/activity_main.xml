<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.johnny.wallhack.MainActivity">

    <Button
        android:text="@string/button_PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/PLAY"
        android:onClick="PLAYMessage"
        android:layout_alignRight="@+id/LEADERBOARDS"
        android:layout_alignEnd="@+id/LEADERBOARDS"
        android:layout_alignLeft="@+id/LEADERBOARDS"
        android:layout_alignStart="@+id/LEADERBOARDS" />

    <Button
        android:text="HELP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/HELP"
        android:onClick="HELPMessage"
        android:layout_below="@+id/LEADERBOARDS"
        android:layout_alignLeft="@+id/LEADERBOARDS"
        android:layout_alignStart="@+id/LEADERBOARDS"
        android:layout_alignRight="@+id/LEADERBOARDS"
        android:layout_alignEnd="@+id/LEADERBOARDS" />

    <Button
        android:text="LEADERBOARDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/LEADERBOARDS"
        android:layout_below="@+id/PLAY"
        android:layout_centerHorizontal="true" />

    <Switch
        android:text="Audio "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/HELP"
        android:layout_toEndOf="@+id/HELP"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ravenhead"
        android:id="@+id/imageView"
        android:layout_above="@+id/PLAY"
        android:layout_alignParentStart="true" />

</RelativeLayout>
